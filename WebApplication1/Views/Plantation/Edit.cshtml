@model Plantation
@{
    ViewData["Title"] = "CRUD Test Application";
}

<div class="text-center">
    @if(Model.Id==0){<h1 class="display-4">Insert New Plantation</h1>}
    else{<h1 class="display-4">Edit Plantation # @Html.DisplayFor(model => model.Id)</h1>}    
    <br>
    <div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(model => model.Name)</label>
                @Html.TextBoxFor(model => model.Name, new{@class="form-control"})
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(model => model.Description)</label>
                @Html.TextBoxFor(model => model.Description, new{@class="form-control"})
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(model => model.PlantId)</label>
                @Html.TextBoxFor(model => model.PlantId, new{@class="form-control"})
            </div>
        </div>
        <br>
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <input type="button" class="wideButtons btn btn-danger" value="Back" onclick="location.href='@Url.Action("Index", "Plantation")'" />
            </li>
            <li class="nav-item">
                <input type="button" class="wideButtons btn btn-warning" value="Discard" onclick="location.href='@Url.Action("Index", "Plantation")'" />
            </li>
            <li class="nav-item">
                <input type="submit" class="wideButtons btn btn-success" value="Save" />
            </li>
        </ul>
    }
</div>
