@model IEnumerable<Plantation>
@{
    ViewData["Title"] = "CRUD Test Application";
}

<div class="text-center">
    <h1 class="display-4">Plantations</h1>
    <br>
    <div class="input-group justify-content-lg-end">
        <div class="form-outline">
            <input type="search" id="form1" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary">Search</button>
    </div>
    </br>
    <div class="table-responsive">
        <table class="table table-hover" >
            <tr>
                <th scope="col">Reference</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Plant Type</th>
            </tr>
            @if(Model!=null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.PlantId</td>
                        <td>
                            <input type="button" class="btn btn-warning" value="Edit" onclick="location.href='@Url.Action("Edit", "Plantation", new {id=@item.Id})'" />
                            <input type="button" class="btn btn-info" value="Details" onclick="location.href='@Url.Action("Details", "Plantation", new {id=@item.Id})'" />
                            <input type="button" class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("Remove", "Plantation", new {id=@item.Id})'" />
                        </td>
                    </tr>
                }
            }        
        </table>
    </div>
</div>
<div class="button-container justify-content-lg-between">
    <input type="button" class="btn btn-danger" value="Back" onclick="location.href='@Url.Action("Index", "Home")'" />            
    <input type="button" class="btn btn-success" value="New Plantation" onclick="location.href='@Url.Action("Edit", "Plantation")'" />
</div>